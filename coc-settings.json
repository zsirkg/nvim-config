{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".ccls-cache"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  },
  "diagnostic.displayByAle": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/disk1/work/python-virtual-environments/venv/bin/autopep8"
}
